<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.2.1.RELEASE</version>
	</parent>

	<groupId>minium</groupId>
	<artifactId>minium-magic</artifactId>
	<version>2.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Minium Magic</name>
	
	<properties>
		<java.version>1.7</java.version>

        <checkstyle.config.dir>${basedir}/../src/main/checkstyle</checkstyle.config.dir>
	
		<platypus.version>0.0.1-SNAPSHOT</platypus.version>
		<selenium.version>2.44.0</selenium.version>
		<closure-compiler.version>v20141215</closure-compiler.version>
		<rhino.version>1.7R4</rhino.version>
		<dynjs.version>0.3.1</dynjs.version>
		
		<sikulix.version>1.1.0-SNAPSHOT</sikulix.version>
		<guava.version>18.0</guava.version>
		<guava-retrying.version>1.0.7</guava-retrying.version>
		<commons-compress.version>1.9</commons-compress.version>
		
		<powermock.version>1.6.1</powermock.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
				<version>${guava.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-elements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-webelements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-visualelements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-boxelements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-script-rhinojs</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-actions</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
			    <groupId>io.platypus</groupId>
			    <artifactId>platypus</artifactId>
			    <version>${platypus.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.seleniumhq.selenium</groupId>
		        <artifactId>selenium-api</artifactId>
		        <version>${selenium.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.seleniumhq.selenium</groupId>
		        <artifactId>selenium-java</artifactId>
		        <version>${selenium.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.seleniumhq.selenium</groupId>
		        <artifactId>selenium-support</artifactId>
		        <version>${selenium.version}</version>
			</dependency>
			<dependency>
				<groupId>com.google.javascript</groupId>
				<artifactId>closure-compiler</artifactId>
				<version>${closure-compiler.version}</version>
			</dependency>
			<dependency>
				<groupId>org.mozilla</groupId>
				<artifactId>rhino</artifactId>
				<version>${rhino.version}</version>
			</dependency>
			<dependency>
				<groupId>org.dynjs</groupId>
				<artifactId>dynjs</artifactId>
				<version>${dynjs.version}</version>
			</dependency>
			<dependency>
				<groupId>com.sikulix</groupId>
				<artifactId>sikulixapi</artifactId>
				<version>${sikulix.version}</version>
			</dependency>
		    <dependency>
				<groupId>com.github.rholder</groupId>
				<artifactId>guava-retrying</artifactId>
				<version>${guava-retrying.version}</version>
				<exclusions>
					<exclusion>
						<groupId>com.google.guava</groupId>
						<artifactId>guava</artifactId>
			        </exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-compress</artifactId>
				<version>${commons-compress.version}</version>
			</dependency>
			<dependency>
				<groupId>org.powermock</groupId>
				<artifactId>powermock-api-mockito</artifactId>
				<version>${powermock.version}</version>
			</dependency>
			<dependency>
				<groupId>org.powermock</groupId>
				<artifactId>powermock-module-junit4</artifactId>
				<version>${powermock.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-checkstyle-plugin</artifactId>
					<version>2.13</version>
					<configuration>
						<configLocation>${checkstyle.config.dir}/checkstyle.xml</configLocation>
						<headerLocation>${checkstyle.config.dir}/LICENSE.txt</headerLocation>
						<suppressionsLocation>${checkstyle.config.dir}/suppressions.xml</suppressionsLocation>
						<propertyExpansion>
							checkstyle.config.dir=${checkstyle.config.dir}
						</propertyExpansion>
						<consoleOutput>true</consoleOutput>
						<failsOnError>false</failsOnError>
						<linkXRef>false</linkXRef>
						<includeTestSourceDirectory>true</includeTestSourceDirectory>
						<includes>minium/**/*.java</includes>
					</configuration>
					<executions>
						<execution>
							<id>validate</id>
							<phase>validate</phase>
							<goals>
								<goal>checkstyle</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.10.1</version>
                    <configuration>
                        <excludePackageNames>*.internal.*</excludePackageNames>
                        <quiet>true</quiet>
                        <failOnError>true</failOnError>
                        <links>
                            <value>http://docs.oracle.com/javase/${java.version}/docs/api/</value>
                            <link>http://selenium.googlecode.com/git/docs/api/java/</link>
                            <link>http://docs.guava-libraries.googlecode.com/git-history/v${guava.version}/javadoc/</link>
                        </links>
                    </configuration>
                    <executions>
                        <execution>
                            <id>attach-javadocs</id>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
			</plugins>
		</pluginManagement>
	</build>

	<modules>
		<module>minium-webelements</module>
		<module>minium-elements</module>
		<module>minium-boxelements</module>
		<module>minium-visualelements</module>
		<module>minium-actions</module>
		<module>minium-script-rhinojs</module>
		<module>minium-weblegacy</module>
		<module>minium-mobileelements</module>
		<module>minium-script-dynjs</module>
	</modules>
	
	<repositories>
		<repository>
			<id>sonatype-snapshot</id>
			<url>http://oss.sonatype.org/content/repositories/snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	
</project>