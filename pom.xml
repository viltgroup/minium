<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.2.1.RELEASE</version>
	</parent>

	<groupId>minium</groupId>
	<artifactId>minium-magic</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Minium Magic</name>
	
	<properties>
		<java.version>1.7</java.version>
	
		<platypus.version>0.0.1-SNAPSHOT</platypus.version>
		<selenium.version>2.44.0</selenium.version>
		<closure-compiler.version>v20141215</closure-compiler.version>
		<rhino.version>1.7R4</rhino.version>
		<!-- we need at least this version because of https://github.com/mockito/mockito/issues/128 -->
		<mockito.version>2.0.3-beta</mockito.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
				<version>18.0</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-elements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-webelements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-boxelements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-script-rhino</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>minium</groupId>
				<artifactId>minium-actions</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
			    <groupId>io.platypus</groupId>
			    <artifactId>platypus</artifactId>
			    <version>${platypus.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.seleniumhq.selenium</groupId>
		        <artifactId>selenium-api</artifactId>
		        <version>${selenium.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.seleniumhq.selenium</groupId>
		        <artifactId>selenium-java</artifactId>
		        <version>${selenium.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.seleniumhq.selenium</groupId>
		        <artifactId>selenium-support</artifactId>
		        <version>${selenium.version}</version>
			</dependency>
			<dependency>
				<groupId>com.google.javascript</groupId>
				<artifactId>closure-compiler</artifactId>
				<version>${closure-compiler.version}</version>
			</dependency>
			<dependency>
				<groupId>org.mozilla</groupId>
				<artifactId>rhino</artifactId>
				<version>${rhino.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<modules>
		<module>minium-webelements</module>
		<module>minium-elements</module>
		<module>minium-boxelements</module>
		<module>minium-visualelements</module>
		<module>minium-actions</module>
		<module>minium-script-rhino</module>
		<module>minium-weblegacy</module>
	</modules>
</project>