	<groupId>io.vilt.minium</groupId>
	<artifactId>minium-parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Minium Parent POM</name>

	<developers>
		<developer>
			<id>rui.figueira</id>
			<name>Rui Figueira</name>
			<email>rui.figueira@vilt-group.com</email>
			<organization>VILT Group</organization>
			<organizationUrl>http://www.vilt-group.com</organizationUrl>
			<timezone>Europe/Lisbon</timezone>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://github.com/viltgroup/minium.git</connection>
		<developerConnection>scm:git:ssh://git@github.com/viltgroup/minium.git</developerConnection>
		<url>https://github.com/viltgroup/minium</url>
	</scm>

	<organization>
		<name>VILT Group</name>
		<url>http://www.vilt-group.com</url>
	</organization>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
			<comments>A business-friendly OSS license</comments>
		</license>
	</licenses>
	
	<properties>
		<java.version>1.7</java.version>

		<checkstyle.config.dir>${basedir}/../src/main/checkstyle</checkstyle.config.dir>
	
		<platypus.version>0.1.0</platypus.version>
		<selenium.version>2.44.0</selenium.version>
		<phantomjsdriver.version>1.2.0</phantomjsdriver.version>
		<closure-compiler.version>v20141215</closure-compiler.version>
		<rhino.version>1.7R5</rhino.version>
		<dynjs.version>0.3.1</dynjs.version>
		<cucumber.version>1.2.2</cucumber.version>
		<json.version>20140107</json.version>
		<sikulix.version>1.1.0-SNAPSHOT</sikulix.version>
		<guava.version>18.0</guava.version>
		<guava-retrying.version>1.0.7</guava-retrying.version>
		<commons-compress.version>1.9</commons-compress.version>
		<jackson.version>2.5.1</jackson.version>
		<slf4j.version>1.7.10</slf4j.version>
		<args4j.version>2.0.29</args4j.version>
		
		<powermock.version>1.6.1</powermock.version>

		<!-- Required by Sonatype -->
		<sonatypeOssDistMgmtSnapshotsUrl>https://oss.sonatype.org/content/repositories/snapshots/</sonatypeOssDistMgmtSnapshotsUrl>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
